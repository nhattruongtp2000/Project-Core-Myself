@model ViewModel.ViewModels.RegisterVm

<head>
    <style>
        input:invalid{
            border-color:red;
        }
        input:valid{
            border-color:green;
        }

    </style>
</head>

<body>
    <form method="post"  asp-action="Register">
        <div >
            <label asp-for="Email" class="control-label"> </label>
            <input   type="email" asp-for="Email" class="form-control col-4 " />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="UserName" class="control-label"> </label>
            <input type="text" asp-for="UserName" class="form-control  col-4 " />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Pass" class="control-label"> </label>
            <input type="password" asp-for="Pass" class="form-control  col-4 " />
            <span asp-validation-for="Pass" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ConfirmPass" class="control-label"> </label>
            <input type="password" asp-for="ConfirmPass" class="form-control  col-4 " />
            <span asp-validation-for="ConfirmPass" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
    </form>
</body>